@using Supermarket.Models
@model List<ProductModelView>

@{
    ViewBag.Title = "ViewAllProducts";
   
}

<h2>View All Products</h2>
<br />
<table border="1" background-image="http://hidefwalls.com/wp-content/g/hd-2/5408_3d_space_scene_hd_wallpapers.jpg">

    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Category</th>
        <th>Manifactor</th>
        <th>Count</th>


    </tr>

    @foreach (ProductModelView product in Model)
    {
        using (Html.BeginForm("RedirectAction", "Products",new {id = product.Id}))
        {
            <tr>    
                <td>@product.Name </td> 
                <td>@product.Price </td> 
                <td>@product.Quantity</td> 
                <td>@product.CategoryName</td> 
                <td>@product.ManifactorName</td> 
                <td><input id="count" type="text" value="0" name="count" maxlength="5" size="6" /></td>
                <td><input type="submit" name="productAction" value="Add"/></td> 
                <td><input type="submit" name="productAction" value="Delete" /></td>
                <td><input type="submit" name="productAction" value="Change" /></td>
                <td><input type="submit" name="productAction" value="Buy" /></td>

            </tr>
        }
    
    }
</table>

